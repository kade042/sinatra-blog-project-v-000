<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">
      <!-- Blog Post -->

      <% @posts.each do |post|%>
      <h2>
          <a href="/posts/<%= post.id %>"><%= post.title %></a>
      </h2>
      <p><span class="glyphicon glyphicon-time"></span> Posted on <%= post.created_at.to_date %></p>
        <p><%= post.content %></p>
      <% end %>
    </div>
  </div>
